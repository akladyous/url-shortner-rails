    <div class="container mt-4">
        <div class="row justify-content-md-center">
            <div class="col col-lg-5 col-md-5 col-sm-5">
                <div class="card">
                    <div class="card-header text-center">
                        SignIn Page
                    </div>
                    <div class="card-body">
                        <div class="user-avatar">
                            <%= image_tag("avatar.jpeg", size: '100x100', alt:'avatar', class: 'rounded mx-auto d-block') %>
                        </div>
                        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {"data-turbo": false}) do |f| %>
                            <%# render "devise/shared/error_messages", resource: resource %>

                            <div class="form-group mb-2">
                                <%= f.label :email,{ class: 'form-label'} %>
                                <%= f.email_field :email, { class: 'form-control', autofocus: true, autocomplete: "off" } %>
                                <% if resource.errors.has_key?(:email) %>
                                    <%= content_tag :div, resource.errors.full_messages_for(:email).to_sentence, {class: ['d-block', 'invalid-feedback']} %>
                                <% end %>
                            </div>

                            <div class="form-group mb-2">
                                <%= f.label :password, { class: 'form-label'} %>
                                <%= f.password_field :password, { class: 'form-control', autofocus: true, autocomplete: "off", } %>
                                <% if resource.errors.has_key?(:password) %>
                                    <%= content_tag :div, resource.errors.full_messages_for(:password).to_sentence, {class: ['d-block', 'invalid-feedback']} %>
                                <% end %>
                            <!-- placeholder: "#{@minimum_password_length} characters minimum" -->
                            </div>

                            <div class="form-group mb-2>
                                <%= f.label :password_confirmation  %>
                                <%= f.password_field :password_confirmation, { class: 'form-control', autofocus: true, autocomplete: "off" } %>
                                <% if resource.errors.has_key?(:password_confirmation) %>
                                    <%= content_tag :div, resource.errors.full_messages_for(:password_confirmation).to_sentence, {class: ['d-block', 'invalid-feedback']} %>
                                <% end %>
                            </div>

                            <div class="form-control text-center border-0 mt-3">
                                <%= f.submit "Sign up", { class: "btn btn-light rounded-pill py-2 px-4"} %>
                            </div>
                        <% end %>

                        <div class="form-group">
                            <%= render "devise/shared/links" %>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
