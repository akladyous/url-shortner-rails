<%= content_for :form %>
    <div class="container mt-4">
        <div class="row justify-content-md-center">
            <div class="col col-lg-5 col-md-5 col-sm-5">
                <div class="card">
                    <div class="card-header text-center">
                        SignIn Page
                    </div>
                    <div class="card-body">
                        <div class="user-avatar">
                            <%= image_tag("avatar.jpeg", size: '100x100', alt:'avatar', class: 'rounded mx-auto d-block') %>
                        </div>
                        <%= yield %>
                    </div>
                </div>
            </div>
        </div>
    </div>
<% end %>

