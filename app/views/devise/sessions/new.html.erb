<div class="container mt-4">
    <div class="row justify-content-md-center">
        <div class="col col-lg-5 col-md-5 col-sm-5">
            <div class="card">
                <div class="card-header text-center">
                    SignIn Page
                </div>
                <div class="card-body">
                    <div class="user-avatar">
                        <%= image_tag("avatar.jpeg", size: '100x100', alt:'avatar', class: 'rounded mx-auto d-block') %>
                    </div>
                    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                        <%# render "devise/shared/error_messages", resource: resource %>

                        <div class="form-group mb-2">
                            <%= f.label :email, { class: 'form-label' } %>
                            <%= f.email_field :email, {class: 'form-control', autofocus: true, autocomplete: "off"} %>
                        </div>

                        <div class="form-group mb-2">
                            <%= f.label :password, { class: 'form-label'} %>
                            <%= f.password_field :password, { class: 'form-control', autocomplete: "off"} %>
                        </div>

                        <div class="form-group mb-2">
                            <% if !flash.empty? %>
                                    <%= content_tag :div, 'Invalid email or password', {class: ['d-block', 'invalid-feedback']} %>
                            <% end %>
                        </div>


                        <% if devise_mapping.rememberable? %>
                            <div class="input-group my-3">
                                <div class="input-group-text bg-transparent border-0">
                                    <%= f.check_box :remember_me, { class: 'form-check-input mt-0'} %>
                                </div>
                                <%= f.label :remember_me, { class: "form-control border-0"} %>
                            </div>
                        <% end %>

                        <div class="form-control text-center border-0 mt-3">
                            <%= f.submit "Login up", { class: "btn btn-light rounded-pill py-2 px-4"} %>
                        </div>

                    <% end %>

                    <%= render "devise/shared/links" %>

                </div>
            </div>
        </div>
    </div>
</div>
